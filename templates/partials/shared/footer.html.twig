{# 
/**
* footer
* footer__left for contactdetails
* footer__right for opening hours
*/
 #}

<footer class="footer">
	<div class="container">
		<div class="footer__inner">
			<div class="footer__left">
				{{ page.footerleft }}

				<div
					class="c-email-protecting">
					{# not as field in content-type "info" because of extra security, 
					          also does not need to be translated #}
					<a href="{{ 'eb.stp@ofni:otliam'|reverse }}">{{ 'eb.stp@ofni'|reverse }}</a>
				</div>

			</div>
			<!-- end footer__left -->


			<div class="footer__right">
				<div class="footer__right-top">
					{{ page.footerright }}
				</div>
				<div class="footer__right-bottom">
					<a href="https://www.facebook.com/pts.be/">
						<img class="c-social-icon c-social-icon--footer" src="{{ base_path ~ directory }}/dist/images/facebook-icon.png" alt="">
					</a>
				</div>
			</div>
			<!-- end footer__right -->
		</div>
		<!-- end footer__inner -->

		<div class="footer__map">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2521.7042551776926!2d5.208449516281596!3d50.79958927002607!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c11a0901656a81%3A0x7d89ddf59cef10cd!2sLuikersteenweg%20278%2C%203800%20Sint-Truiden!5e0!3m2!1snl!2sbe!4v1606163273779!5m2!1snl!2sbe" width="100%" height="350" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
		</div>
	</div>
	<!-- end container in footer -->
</footer>
