{#
/**
 * @file
 * Theme override to display a node.
 *
 *
 * @see template_preprocess_node()
 *
 * @todo Remove the id attribute (or make it a class), because if that gets
 *   rendered twice on a page this is invalid CSS for example: two lists
 *   in different view modes.
 * 
 * This teaser display-setting for the trailers
 * hover gray color
 */
#}
{%
  set classes = [
    'node',
    'node-link',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<a href="{{url}}" {{ attributes.addClass(classes) }}>

  <div{{ content_attributes.addClass('trailer-model') }}>
    <div class="trailer-model__img">
      {{ content.field_trailer_img }}
    </div>
    <div class="trailer-model__caption trailer-model__caption--gray">
      <div class="trailer-model__label">
        {{ label }}
      </div>
      <div class="trailer-model__extra-info">
        {{ content.field_trailer_extra_info }}
      </div>
    </div>
  </div>

</a>
